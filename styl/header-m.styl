@media screen and (max-width:599px)
	
	header
		height:65px
		border-bottom:1px solid #f2f2f2
		.borderTop
			background-color:#ddd
			height:3px
			width:100%
			margin-bottom:8px
		.header-logo
			padding-left:10px
			margin-bottom:10px
			height:42px
			width:86px
			img 
				height:100% 
