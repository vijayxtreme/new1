				margin-bottom:30px

			border-bottom:2px solid #b8b8b8
	
	section.stay-in-touch
		padding-top:44px
		padding-left:48px
		padding-bottom:31px
		text-align:center
		width:calc(100% - 96px)
		
		span 
			color:#da4f1f
			@extend .futura
			font-size:12px
			display:block
			padding-bottom:20px
			
		input[type=text], input[type=email]
			width:100%
			border:1px solid #c2c2c2
			margin-bottom:10px
			text-align:center
			height:33px
			font-family:"Open Sans"
			font-size:14.84px	
		
		input[type=submit]
			width:127px
			height:37px
			background-color:#5ca3c4
			border:0px
			color:white
			font-family:"Open Sans"
			font-size:14.84px
			letter-spacing:1.0px

	section.social-media 
		border-top:2px solid #b8b8b8
		padding-left:35px
		padding-bottom:47px

		h3 
			margin-top:37px
			color:#da4f1f
			@extend .futura
			font-size:12px
			text-align:center
			padding-bottom:34px
		
		.post
			clear:both
			width:calc(100% - 70px)
						
			.social-icon
				float:left
				width:38px
				
			.post-content
				float:left
				width:calc(100% - 51px)
				padding-left:13px
				
	section.social-footer
		border-top:2px solid #b8b8b8
		position:relative
		
		ul
			position:absolute
			top:-20px
			left:50%
			margin-left:-82px
			li 
				display:inline
	
	footer 
		padding-top:45px
		padding-left:35px
		padding-bottom:35px
		width:calc(100% - 70px)
		
		table 
			font-family:"Open Sans"
			font-size:11px
			color:#c0c0c0
			th 
				font-weight:600
				color:#494949
				text-align:left
			td 
				text-align:left

			th:last-child, td:last-child
				padding-left:26px
