@media screen and (max-width:599px)
		
	section.content
		border-top:1px solid #e0e0e0
		
		.main-image
			background:url('../img/main-image.png')
			height:250px
			width:100%
			background-repeat:no-repeat
			background-size:cover
			border-bottom:1px solid #e0e0e0

			.main-title
				padding-top:67px
				padding-left:20px
				width:200px
				font-family:knockout
				color:white
				
				p 
					@extend .futura
					font-size:11px
					letter-spacing:1.5px
					padding-bottom:12px
				
				h1
					font-size:40px
					line-height:35px
					
				.desktop 
					display:none

				.mobile
					display:block
					
				a
					text-decoration:none
					color:white
				

	section.trending-posts
		padding-left:13px
		padding-right:13px
		
		h2
			padding-top:38px
			text-align:center
			padding-bottom:34px
			@extend .futura
			font-size:11px
		
		article
			margin-bottom:20px
			box-sizing:content-box
			width:calc(100% - 20px)	
			padding-left:20px
			p
				color:white
			
			p.category
				@extend .futura
				font-size:11px
				padding-top:128px
			
			h2.title
				font-family:'Palatino'
				padding-top:13px
				text-align:left
				color:white
				font-size:25px
				line-height:29px
				max-width:210px
				
			.read-more-trending
				font-family:'Open Sans'
				font-size:10px
				font-weight:800
				letter-spacing:2.0px
			
		article:last-child
			margin-bottom:0px

		article.article1
			background:url('../img/img2.png')
			height:362px
			background-size:cover
			background-repeat:no-repeat
		
		article.article2
			background:url('../img/img3.png')
			height:362px
			background-size:cover
			background-repeat:no-repeat
			
			h2
				max-width:initial 
		
		article.article3
			background:url('../img/img4.png')
			height:362px
			background-size:cover
			background-repeat:no-repeat
		
		article.article4
			background:url('../img/img5.png')
			height:362px
			background-size:cover
			background-repeat:no-repeat
			
		article.article5
			background:url('../img/img6.png')
			height:362px
			background-size:cover
			background-repeat:no-repeat

	section.recent-reviews
		
		h2
			padding-top:38px
			text-align:center
			padding-bottom:34px
			border-bottom:2px solid #b8b8b8
			@extend .futura
			font-size:11px

		.recent-main 
			padding-left:39px
			padding-right:39px
			padding-top:34px
			padding-bottom:39px
			
			article 
				h3
					clear:both
					padding-top:0px
					font-family: "Georgia"
					font-style:italic
					font-size:20px
					line-height:28px
					text-align:center
					padding-bottom:21px
					text-decoration:underline
					color:#2f2f2f
					
				p 
					font-family:"Open Sans"
					color:#9f9f9f
					font-size:16px
					text-align:center
					
				.read-more-link
					margin-top:22px
					font-family:"Open Sans"
					font-size:10px
					letter-spacing:2.0px
					color:black
					font-weight:800
					
			border-bottom:2px solid #b8b8b8
			
			.cat-heading
				@extend .futura
				font-size:11px

			span 
				color:#da4f1f
				padding-bottom:46px
				
			.tiny-logo 
				float:right
	
		
		padding-bottom:38px

