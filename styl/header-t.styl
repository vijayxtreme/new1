@media screen and (min-width:600px) and (max-width:991px)
	header
		height:65px
		border-bottom:1px solid #f2f2f2
		background-color:#f8f8f8
		
		.borderTop
			background-color:#ddd
			height:3px
			width:100%
			margin-bottom:8px
		.header-logo
			padding-left:10px
			margin-bottom:10px
			height:50px
			width:100px
			img 
				height:100% 
				width:100%
			float:left

		.mobile-menu
			float:right

			#search 
				background:url(../img/magnifying.png)
				background-size:16px 15px
				background-repeat:no-repeat
				height:25px
				width:27px
				margin-right:10px
				margin-top:15px
				float:left
				cursor:pointer

			.hamburger
				border-left:1px solid #ccc
				padding-left:20px
				padding-right:20px
				padding-top:9px
				padding-bottom:9px
				height:26px
				width:18px
				cursor:pointer
				float:right
				img
					height:100%
					width:100%